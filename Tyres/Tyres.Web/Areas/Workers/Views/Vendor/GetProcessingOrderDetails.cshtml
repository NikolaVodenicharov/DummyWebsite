@model OrderProcessingDetailsDTO
@{
    ViewData["Title"] = "Processing order details";
}

<h1>@ViewData["Title"]</h1>
<br />

<div>
    <p>Date: @Model.Date</p>
    <p>Receiver: @Model.UserFirstName @Model.UserLastName</p>
    <p>Delivery address: @Model.DeliveryAddress</p>
    <p>Status: @Model.Status</p>
</div>
<div>
    <a class="btn btn-success" asp-controller="Vendor" asp-action="ProcessingOrder" asp-route-orderId="@Model.OrderId" method="post">Processing the order</a>
</div>
<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductType.ToString()</td>
                <td>@item.Price.ToMoney()</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
