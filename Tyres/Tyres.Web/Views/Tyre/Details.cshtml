@model TyreDetails
@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>
<br />

<div class="card border-primary" style="max-width: 20rem;">
    <div class="card-header bg-transparent border-primary text-center">
        @Model.Brand @Model.Model
    </div>

    <div class="card-body">
        <div>
            <img src="~/img/TyreDummy.png" width="150" height="150" />
        </div>
        <div class="text-right">
            <p class="card-text">$@(Model.Price.ToMoney())</p>
            <p class="card-text">@((int)Model.Width)/@((int)Model.Ratio)/@((int)Model.Diameter)</p>
            <p class="card-text">@Model.Season</p>
        </div>
    </div>

    <div class="card-footer bg-transparent border-primary">
        <p class="card-text">Speed index: @(Model.Speed) <span class="font-italic">(@((int)Model.Speed) max speed)</span></p>
        <p class="card-text">Load index: @(Model.Load.ToString().Remove(0, 1)) <span class="font-italic">(@((int)Model.Load) kg per tyre)</span></p>
        <p class="card-text">Fuel efficient: @(Model.FuelEfficient)</p>
        <p class="card-text">Wet grip: @(Model.WetGrip)</p>
        <p class="card-text">Noice: @((int)Model.Noice)dB</p>
    </div>
</div>
<br />

<a class="btn btn-primary" asp-controller="Tyre" asp-action="Details" asp-route-id="@Model.Id">Add to cart</a>
